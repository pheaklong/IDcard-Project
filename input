    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Add or Edit student
        document.getElementById('studentForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const newStudent = {
                id: document.getElementById('studentId').value,
                name: document.getElementById('studentName').value,
                gender: document.getElementById('studentGender').value,
                dob: document.getElementById('studentDob').value,
                class: document.getElementById('studentClass').value,
                address: document.getElementById('studentAddress').value,
                photo: '', // Will be set below
                phone: document.getElementById('studentPhone').value,
                father: document.getElementById('fatherName').value,
                mother: document.getElementById('motherName').value,
                studyYear: document.getElementById('studentYear').value
            };

            // Handle photo upload preview (if any)
            const photoInput = document.getElementById('editStudentPhoto');
            if (photoInput && photoInput.files && photoInput.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    newStudent.photo = e.target.result;
                    saveStudent(newStudent);
                };
                reader.readAsDataURL(photoInput.files[0]);
            } else {
                newStudent.photo = 'https://via.placeholder.com/150';
                saveStudent(newStudent);
            }
        });

        function saveStudent(newStudent) {
            // Check if editing (editStudent exists in localStorage)
            const editStudent = JSON.parse(localStorage.getItem('editStudent'));
            let students = JSON.parse(localStorage.getItem('students')) || [];

            if (editStudent && editStudent.id === newStudent.id) {
                // Edit mode: update existing student
                const index = students.findIndex(s => s.id === newStudent.id);
                if (index !== -1) {
                    students[index] = newStudent;
                    localStorage.setItem('students', JSON.stringify(students));
                    localStorage.removeItem('editStudent');
                    alert('Student updated successfully!');
                    window.location.href = 'student-list.html';
                    return;
                }
            } else {
                // Add mode: check for duplicate ID
                if (students.some(s => s.id === newStudent.id)) {
                    alert('A student with this ID already exists!');
                    return;
                }
                students.push(newStudent);
                localStorage.setItem('students', JSON.stringify(students));
                alert('Student added successfully!');
                document.getElementById('studentForm').reset();
            }
        }

        // If editing, pre-fill form
        window.addEventListener('DOMContentLoaded', function() {
            const editStudent = JSON.parse(localStorage.getItem('editStudent'));
            if (editStudent) {
                document.querySelector('h2.section-title').textContent = 'Edit Student';
                document.querySelector('p.mb-4').textContent = 'Update the student information below.';
                document.getElementById('studentId').value = editStudent.id || '';
                document.getElementById('studentId').readOnly = true;
                document.getElementById('studentName').value = editStudent.name || '';
                document.getElementById('studentGender').value = editStudent.gender || '';
                document.getElementById('studentDob').value = editStudent.dob ? editStudent.dob.split(' ')[0] : '';
                document.getElementById('studentClass').value = editStudent.class || '';
                document.getElementById('studentYear').value = editStudent.studyYear || '';
                document.getElementById('studentAddress').value = editStudent.address || '';
                document.getElementById('studentPhone').value = editStudent.phone || '';
                document.getElementById('fatherName').value = editStudent.father || '';
                document.getElementById('motherName').value = editStudent.mother || '';
                // Show photo preview if exists
                if (editStudent.photo) {
                    const preview = document.getElementById('editPhotoPreview');
                    preview.src = editStudent.photo;
                    preview.style.display = 'block';
                }
                // Change button text
                document.querySelector('button[type="submit"]').textContent = 'Update Student';
            }
        });
    </script>
